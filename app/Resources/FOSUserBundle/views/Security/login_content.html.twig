{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<br><br><br><br>
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
<div class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <div class="form-login">
            <h4>Espace de connexion.</h4>
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control input-sm chat-input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </br>
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control input-sm chat-input" type="password" id="password" name="_password" required="required"/>
            </br>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <div class="wrapper">
            <span class="group-btn">
            <br>
                <input class="btn btn-primary btn-md" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </span>
            </div>
            </div>
        </div>
    </div>
</div>






    
</form>
